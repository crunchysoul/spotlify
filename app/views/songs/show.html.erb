<body class="<%= years @song.release_at %>">
  <p id="notice"><%= notice %></p>

  <p>
  <strong>Name:</strong>
  <%= @song.name %>
  </p>

  <p>
  <strong>Artist:</strong>
  <%= link_to @song.artist.name, @song.artist %>
  </p>

  <p>
  <strong>Duration:</strong>
  <%= format_duration @song.duration %>
  </p>

  <p>
  <strong>Release at:</strong>
  <%= @song.release_at %>
  </p>

  <p>
  <strong>Show Counter:</strong>
  <%= @song.impressionist_count %> 
  </p>

  <%= link_to 'Edit', edit_song_path(@song) %> |
  <%= link_to 'Back', :back %>
  <%# <%= link_to 'Back to Song Library', songs_path %>
</body>
